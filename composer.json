{
    "name": "celiovmjr/simplerouter",
    "description": "A lightweight, enterprise-grade PHP router with validation, middleware, and DDD principles",
    "type": "library",
    "license": "MIT",
    "keywords": ["router", "routing", "http", "middleware", "validation", "ddd", "psr-7"],
    "authors": [
        {
            "name": "Celio Junior",
            "email": "profissional.celiojunior@outlook.com",
            "homepage": "https://fb.com/celiojr1994",
            "role": "Developer"
        }
    ],
    "version": "3.0.0",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "SimpleRouter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleRouter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=8"
    }
}
